{
    "name": "node-playwright-setup",
    "version": "1.0.0",
    "type": "module",
    "description": "ARE Setup",
    "scripts": {
        "test": "playwright test",
        "test:headed": "playwright test --headed",
        "test:ui": "playwright test --ui",
        "test:debug": "playwright test --debug",
        "report": "playwright show-report",
        "setup:pdf2img": "cd .mcp/pdf2img && npm install",
        "setup:asciidoc": "cd .mcp/asciidoc && npm install",
        "setup:all": "npm run setup:pdf2img && npm run setup:asciidoc",
        "postinstall": "npm run setup:all"
    },
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@types/node": "^24.5.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.18.1",
        "canvas": "^3.2.0",
        "fs-extra": "^11.3.2",
        "jimp": "^0.22.12",
        "path": "^0.12.7",
        "pdf-lib": "^1.17.1",
        "pdf-parse": "^1.1.1",
        "pdf-poppler": "^0.2.1",
        "pdf2json": "^3.2.2",
        "pdf2pic": "^3.2.0",
        "pdfjs-dist": "^5.4.149",
        "puppeteer": "^24.22.0",
        "sharp": "^0.34.4",
        "uuid": "^13.0.0",
        "mongodb-mcp-server": "^1.0.0"
    },
    "engines": {
        "node": ">=18"
    }
}