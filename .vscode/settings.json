        "build_get_changes": true,
        "build_run_build": true,
        "build_get_status": true,
        "build_update_build_stage": true,
        "release_get_definitions": true,
        "release_get_releases": true,
        "advsec_get_alerts": true,
        "advsec_get_alert_details": true,
        "testplan_create_test_plan": true,
        "testplan_create_test_case": true,
        "testplan_add_test_cases_to_suite": true,
        "testplan_list_test_plans": true,
