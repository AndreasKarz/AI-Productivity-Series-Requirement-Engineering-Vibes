{
    "chat.promptFiles": true,
    "chat.promptFilesLocations": {
        ".github/userprompts": true
    },
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "chat.mcp.serverSampling": {
        "ARE/.vscode/mcp.json: ado": {
            "allowedModels": [
                "copilot/gpt-4.1",
                "copilot/auto",
                "copilot/claude-3.5-sonnet",
                "copilot/claude-3.7-sonnet",
                "copilot/claude-3.7-sonnet-thought",
                "copilot/claude-sonnet-4",
                "copilot/gemini-2.0-flash-001",
                "copilot/gemini-2.5-pro",
                "copilot/gpt-4o",
                "copilot/gpt-5",
                "copilot/o3-mini",
                "copilot/o4-mini"
            ]
        }
    },
    "chat.mcp.access": "all",
    "chat.mcp.discovery.enabled": {
        "claude-desktop": true,
        "windsurf": true,
        "cursor-global": true,
        "cursor-workspace": true
    },
    "chat.mcp.autostart": "newAndOutdated",
    "chat.tools.terminal.autoApprove": {
        "/^git (status|show\b.*)$/": true,
        "intent": true,
        "core_get_work_item": true,
        "wit_list_work_item_comments": true,
        "wit_get_work_item": true,
        "core_list_project_teams": true,
        "core_list_projects": true,
        "core_get_identity_ids": true,
        "work_list_team_iterations": true,
        "work_create_iterations": true,
        "work_assign_iterations": true,
        "wit_my_work_items": true,
        "wit_list_backlogs": true,
        "wit_list_backlog_work_items": true,
        "wit_get_work_items_batch_by_ids": true,
        "wit_update_work_item": true,
        "wit_create_work_item": true,
        "wit_get_work_items_for_iteration": true,
        "wit_add_work_item_comment": true,
        "wit_add_child_work_items": true,
        "wit_link_work_item_to_pull_request": true,
        "wit_get_work_item_type": true,
        "wit_get_query": true,
        "wit_get_query_results_by_id": true,
        "wit_update_work_items_batch": true,
        "wit_work_items_link": true,
        "wit_work_item_unlink": true,
        "wit_add_child_work_item": true,
        "wit_close_and_link_workitem_duplicates": true,
        "repo_list_repos_by_project": true,
        "repo_list_pull_requests_by_repo": true,
        "repo_list_pull_requests_by_project": true,
        "repo_list_branches_by_repo": true,
        "repo_list_my_branches_by_repo": true,
        "repo_list_pull_requests_by_commits": true,
        "repo_list_pull_request_threads": true,
        "repo_list_pull_request_thread_comments": true,
        "repo_get_repo_by_name_or_id": true,
        "repo_get_branch_by_name": true,
        "repo_get_pull_request_by_id": true,
        "repo_create_pull_request": true,
        "repo_update_pull_request_status": true,
        "repo_update_pull_request": true,
